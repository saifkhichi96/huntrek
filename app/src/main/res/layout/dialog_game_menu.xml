<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_light">

  <ImageButton
      android:id="@+id/dismissButton"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="@dimen/activity_vertical_margin"
      android:background="@drawable/btn_general_normal"
      android:padding="5dp"
      android:scaleType="fitCenter"
      android:src="@android:drawable/ic_menu_close_clear_cancel"
      android:tint="@color/colorPrimary"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:layout_above="@id/dismissButton"
      android:layout_marginTop="@dimen/activity_vertical_margin"
      android:orientation="horizontal"
      android:weightSum="3">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal|bottom"
        android:orientation="vertical">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="2dp"
          android:text="Navigate"
          android:textAllCaps="true"
          android:textColor="@color/colorAccent"
          android:textSize="12sp"/>

      <androidx.cardview.widget.CardView
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:innerRadius="0dp"
          android:shape="ring"
          android:thicknessRatio="1.0"
          app:cardBackgroundColor="@color/colorAccent"
          app:cardCornerRadius="25dp">

        <ImageView
            android:id="@+id/pauseButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/view_settings_navigate"
            android:tint="@color/colorPrimaryDark"/>

      </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal|top"
        android:orientation="vertical">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="2dp"
          android:text="Shop"
          android:textAllCaps="true"
          android:textColor="@color/colorAccent"
          android:textSize="12sp"/>

      <androidx.cardview.widget.CardView
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:innerRadius="0dp"
          android:shape="ring"
          android:thicknessRatio="1.0"
          app:cardBackgroundColor="@color/colorAccent"
          app:cardCornerRadius="25dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="7dp"
            android:scaleType="fitCenter"
            android:src="@drawable/view_settings_shop"
            android:tint="@color/colorPrimaryDark"/>

      </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal|bottom"
        android:orientation="vertical">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="2dp"
          android:text="Items"
          android:textAllCaps="true"
          android:textColor="@color/colorAccent"
          android:textSize="12sp"/>

      <androidx.cardview.widget.CardView
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:innerRadius="0dp"
          android:shape="ring"
          android:thicknessRatio="1.0"
          app:cardBackgroundColor="@color/colorAccent"
          app:cardCornerRadius="25dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/view_settings_items"
            android:tint="@color/colorPrimaryDark"/>

      </androidx.cardview.widget.CardView>

    </LinearLayout>

  </LinearLayout>

  <androidx.appcompat.widget.ButtonBarLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentTop="true"
      android:layout_marginEnd="@dimen/activity_horizontal_margin"
      android:layout_marginRight="@dimen/activity_horizontal_margin"
      android:layout_marginTop="@dimen/activity_margin_top"
      android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_sign_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0000"
        android:drawableEnd="@drawable/ic_action_signout"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_action_signout"
        android:drawableTint="@color/colorAccent"
        android:text="Sign Out"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"/>

  </androidx.appcompat.widget.ButtonBarLayout>

</RelativeLayout>